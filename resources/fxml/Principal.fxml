<?xml version="1.0" encoding="UTF-8"?>

<!-- Interface da janela Principal, a partir dela
o usuário chega em qualquer outra janela do sistema -->

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mercearia.controles.Principal"
            prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>

    <top>

        <HBox spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button text="Cadastar Cliente" onAction="#mostrarCadastroCliente"/>
            <Button text="Cadastar Produto" onAction="#mostrarCadastroProduto"/>
            <Button text="Realizar Venda" onAction="#mostrarRealizaVenda"/>
            <Button text="Relatório" onAction="#mostrarRelatorio"/>

        </HBox>
    </top>
    <center>
        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Clientes:"/>
                <ListView fx:id="lstwClientes"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Produtos:"/>
                <ListView fx:id="lstwProdutos"/>
            </VBox>
        </HBox>
    </center>





</BorderPane>
